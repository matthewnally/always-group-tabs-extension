{
  "manifest_version": 3,
  "name": "Always group tabs",
  "description": "Extension to create new tab groups whenever a tab is opened. Also adds a shortcut for renaming tab groups",
  "version": "1.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "tabGroups"],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+G",
        "mac": "Command+Shift+G"
      }
    }
  },
  "action": {
    "default_popup": "popup.html"
  }
}
